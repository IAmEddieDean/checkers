doctype html
html
  head
    meta(charset='utf-8')      
    title Checkers Face-Off
    link(rel='stylesheet' href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css')
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    .players
      #p1
      #p2
    #page
      #board
        table
          each row in [0, 2, 4, 6]
            tr
              each col in [0, 2, 4, 6]
                td.black.space(data-x=col, data-y=row)
                td.red.space(data-x=col + 1, data-y=row)
            tr
              each col in [0, 2, 4, 6]
                td.red.space(data-x=col, data-y=row + 1)
                td.black.space(data-x=col + 1, data-y=row + 1)
          
      
    script(src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js')
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/jquery-ui/jquery-ui.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
